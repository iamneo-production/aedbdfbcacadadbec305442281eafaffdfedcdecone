@model BookStoreApp.Models.Song

@{
    ViewData["Title"] = "Add Song";
}

<h2>Add Song</h2>

<form asp-controller="Song" asp-action="AddSong" method="post">
    <div class="form-group">
        <label for="SongName">Song Name</label>
        <input type="text" class="form-control" id="SongName" name="SongName" placeholder="Enter song name" required>
    </div>
    <div class="form-group">
        <label for="ReleaseYear">Release Year</label>
        <input type="text" class="form-control" id="ReleaseYear" name="ReleaseYear" placeholder="Enter release year" required>
    </div>
    <div class="form-group">
        <label for="SingerName">Singer Name</label>
        <input type="text" class="form-control" id="SingerName" name="SingerName" placeholder="Enter singer name" required>
    </div>
    <button type="submit" class="btn btn-primary">Add Song</button>
</form>
