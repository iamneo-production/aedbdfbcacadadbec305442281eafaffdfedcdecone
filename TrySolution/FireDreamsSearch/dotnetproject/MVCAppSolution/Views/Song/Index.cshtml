@model IEnumerable<BookStoreApp.Models.Song>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Song Id</th>
                <th>Song Name</th>
                <th>Release Year</th>
                <th>Singer Name</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Song song in Model)
            {
                <tr>
                    <td>@song.SongID</td>
                    <td>@song.SongName</td>
                    <td>@song.ReleaseYear</td>
                    <td>@song.SingerName</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@song.SongID" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Songs found.</p>
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">